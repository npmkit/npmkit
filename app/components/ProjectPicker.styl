@import '../styles/variables.styl'

.installer
	flex-direction: column
	display: flex
	height: 100vh

	&__header
		flex-direction: column
		align-items: center
		justify-content: center
		text-align: center
		display: flex
		padding: 10px 30px
		background: $color-background
		border-bottom: 1px solid $control-outline-color

	&__title
		font-weight: 300
		font-size: 16px
		margin: 0
		margin-top: 10px

	&__description
		color: black

	&__content
		flex-direction: column
		overflow-y: auto
		padding: 10px
		flex: 1

	&__footer
		justify-content: space-between
		display: flex
		padding: 0 10px
		height: 52px
		background: $color-background
		border-top: 1px solid $control-outline-color

.installer-field
	display: block
	margin-bottom: 20px

	&__heading
		font-weight: 500
		color: black

	&__option
		display: block
