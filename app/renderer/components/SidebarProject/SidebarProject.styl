@import '~styles/variables.styl'
@import '~styles/mixins.styl'

$badge-size = 32px

text-overflow-ellipsis()
	text-overflow: ellipsis
	white-space: nowrap
	overflow: hidden

.project-card
	border-left: 4px solid transparent
	position: relative
	padding-left: 10px
	display: flex
	flex: 1

	&:not(&--active):hover
		background-color: darken($color-foreground, 3%)

	&--active
		position: relative

	&__contents
		pointer-events: none
		overflow: hidden
		display: flex
		width: 100%

	&__badge
		font-size: $font-size-base * 1.25
		text-transform: uppercase
		line-height: $badge-size
		border-radius: 50%
		height: $badge-size
		width: $badge-size
		text-align: center
		color: white

	&__details
		text-overflow-ellipsis()
		line-height: ($badge-size / 2)
		margin-right: 5px
		margin-left: 10px
		flex: 1
		hide-in-compact-mode()

	&__name
		text-overflow-ellipsis()
		color: darken($color-heading, 5%)

	&__status
		font-size: $font-size-base * .75
		opacity: .75

	&__star
		background-color: #ffd700
		align-self: center
		position: absolute
		border-radius: 50%
		color: $color-foreground
		padding: 1px
		width: 14px
		height: 14px
		left: 8px
		top: 8px
