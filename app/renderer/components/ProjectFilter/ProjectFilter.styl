@import '~styles/variables.styl';
@import '~styles/mixins.styl';

$project-filter-width = 150px

.SidebarFilter
	position fixed
	display: none
	align-items: center
	justify-content: flex-end
	height: $sidebar-filter-height
	width: $project-filter-width
	z-index: 1
	left:  $sidebar-width - $project-filter-width
	top: 40px

	.SidebarSection--expanded &
		display: flex
		hide-in-compact-mode()

	&-input
		border: 1px solid transparent
		background: transparent
		border-radius: 20px
		padding: 3px 10px
		padding-right: 22px
		font-size: 13px
		margin-right: 10px
		outline: none
		width: 100%

	&-input:focus,
	&--filled &-input
		border-color: $control-outline-color
		background: $color-foreground

	&-clearButton
		background: transparent
		border-radius: 50%
		position: absolute
		color: $color-text
		display: none
		right: 15px
		padding: 0
		top: 6px

	&--filled &-clear-button
		display: block
