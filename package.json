{
  "license": "MIT",
  "scripts": {
    "start": "electron ./app",
    "predev": "yarn build:main --mode=development",
    "dev":
      "webpack-dev-server --env.target=renderer --mode=development --hot --watch",
    "clean": "rimraf ./app/dist",
    "prebuild": "yarn clean",
    "build": "yarn build:main && yarn build:renderer",
    "build:main": "webpack --env.target=main --mode=production",
    "build:renderer": "webpack --env.target=renderer --mode=production",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-require": "^3.0.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-builder": "^20.5.1",
    "eslint": "^4.19.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^0.14.3",
    "invariant": "^2.2.4",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0",
    "rimraf": "^2.6.2",
    "styled-components": "^3.2.3",
    "unstated": "^1.1.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-merge": "^4.1.2"
  },
  "browserslist": ["chrome 59"],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.8"
          }
        }
      ],
      "react"
    ],
    "plugins": [
      [
        "root-import",
        {
          "rootPathSuffix": "app/src"
        }
      ],
      "react-hot-loader/babel",
      "react-require",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "build": {
    "appId": "com.sergeybekrin.npmkit",
    "files": ["**/*", "dist", "!src"],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
