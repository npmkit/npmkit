{
  "private": true,
  "workspaces": [
    "app"
  ],
  "license": "MIT",
  "scripts": {
    "start": "electron ./app",
    "predev": "yarn build-main --mode=development",
    "dev": "webpack-dev-server --env.target=renderer --mode=development --hot --watch",
    "clean": "rimraf ./app/dist",
    "prebuild": "yarn clean",
    "build": "yarn build-main && yarn build-renderer",
    "build-main": "webpack --env.target=main --mode=production",
    "build-renderer": "webpack --env.target=renderer --mode=production",
    "prepack": "yarn build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac",
    "lint": "eslint .",
    "test": "yarn test-unit && yarn test-int",
    "create-diff-report": "node ./scripts/create-diff-report.js",
    "test-unit": "jest --projects .jest.unit.json",
    "test-int": "jest --projects .jest.integration.json --runInBand",
    "prerelease": "yarn lint && yarn build && yarn test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/commit-analyzer": "^6.0.0",
    "@semantic-release/exec": "^3.0.2",
    "@semantic-release/git": "^7.0.1",
    "@semantic-release/github": "^5.0.2",
    "@semantic-release/npm": "^5.0.1",
    "@semantic-release/release-notes-generator": "^7.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-react-require": "^3.0.0",
    "babel-plugin-root-import": "^6.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "concurrently": "^3.6.0",
    "electron": "^2.0.3",
    "electron-builder": "^20.18.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-unobtrusive": "^1.2.2",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^6.0.1",
    "glob-gitignore": "^1.0.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "invariant": "^2.2.4",
    "jest": "^23.5.0",
    "jest-image-snapshot": "^2.4.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.4",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.8",
    "sendmail": "^1.4.1",
    "spectron": "^3.8.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "chrome 61"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.8"
          }
        }
      ],
      "react"
    ],
    "plugins": [
      [
        "root-import",
        {
          "rootPathSuffix": "app/src"
        }
      ],
      "react-hot-loader/babel",
      "react-require",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "jest": {
    "projects": [
      ".jest.unit.json",
      ".jest.integration.json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "unobtrusive",
      "unobtrusive/react"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "globals": {
      "__non_webpack_require__": true
    },
    "overrides": [
      {
        "files": [
          "**.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "bin/",
    "node_modules/",
    "dist/"
  ],
  "build": {
    "publish": false,
    "appId": "com.sergeybekrin.npmkit",
    "files": [
      "**/*",
      "dist",
      "!src"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
