{
  "private": true,
  "workspaces": [
    "app"
  ],
  "license": "MIT",
  "scripts": {
    "start": "electron ./app",
    "predev": "yarn build-main --mode=development",
    "dev": "webpack-dev-server --env.target=renderer --mode=development --hot --watch",
    "clean": "rimraf ./app/dist",
    "prebuild": "yarn clean",
    "build": "yarn build-main && yarn build-renderer",
    "build-main": "webpack --env.target=main --mode=production",
    "build-renderer": "webpack --env.target=renderer --mode=production",
    "prepack": "yarn build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac",
    "lint": "eslint .",
    "test": "yarn test-unit && yarn test-int",
    "create-diff-report": "node ./scripts/create-diff-report.js",
    "test-unit": "jest --projects .jest.unit.json",
    "test-int": "jest --projects .jest.integration.json --runInBand",
    "prerelease": "yarn lint && yarn build && yarn test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/commit-analyzer": "^6.0.1",
    "@semantic-release/exec": "^3.1.3",
    "@semantic-release/git": "^7.0.4",
    "@semantic-release/github": "^5.0.6",
    "@semantic-release/npm": "^5.0.4",
    "@semantic-release/release-notes-generator": "^7.0.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-react-require": "^3.0.1",
    "babel-plugin-root-import": "^6.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "concurrently": "^4.0.1",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-unobtrusive": "^1.2.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.0",
    "glob-gitignore": "^1.0.9",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.1",
    "invariant": "^2.2.4",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.5.0",
    "lint-staged": "^8.0.0",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.11",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.17",
    "sendmail": "^1.4.1",
    "spectron": "^4.0.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "chrome 66"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "jest": {
    "projects": [
      ".jest.unit.json",
      ".jest.integration.json"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "unobtrusive",
      "unobtrusive/react"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "globals": {
      "__non_webpack_require__": true
    },
    "overrides": [
      {
        "files": [
          "**.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "bin/",
    "node_modules/",
    "dist/"
  ],
  "build": {
    "publish": false,
    "appId": "com.sergeybekrin.npmkit",
    "files": [
      "**/*",
      "dist",
      "!src"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "resolutions": {
    "spectron/**/electron-chromedriver": "^3.0.0-beta.1"
  }
}
