{
  "private": true,
  "workspaces": ["app"],
  "license": "MIT",
  "scripts": {
    "start": "electron ./app",
    "predev": "yarn build:main --mode=development",
    "dev":
      "webpack-dev-server --env.target=renderer --mode=development --hot --watch",
    "clean": "rimraf ./app/dist",
    "prebuild": "yarn clean",
    "build": "yarn build:main && yarn build:renderer",
    "build:main": "webpack --env.target=main --mode=production",
    "build:renderer": "webpack --env.target=renderer --mode=production",
    "prepack": "yarn build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "jest --runInBand",
    "create-diff-report": "node ./scripts/create-diff-report.js",
    "test-unit": "yarn test --project .jest.unit.json",
    "test-int": "yarn test --project .jest.integration.json",
    "release": "build"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-require": "^3.0.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "concurrently": "^3.5.1",
    "electron": "^2.0.0",
    "electron-builder": "^20.10.0",
    "electron-updater": "^2.21.8",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-unobtrusive": "^1.2.2",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "glob-gitignore": "^1.0.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "invariant": "^2.2.4",
    "jest": "^22.4.3",
    "jest-image-snapshot": "^2.4.1",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.2",
    "rimraf": "^2.6.2",
    "sendmail": "^1.4.1",
    "spectron": "^3.8.0",
    "styled-components": "^3.2.6",
    "unstated": "^2.0.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-merge": "^4.1.2"
  },
  "browserslist": ["chrome 59"],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.8"
          }
        }
      ],
      "react"
    ],
    "plugins": [
      [
        "root-import",
        {
          "rootPathSuffix": "app/src"
        }
      ],
      "react-hot-loader/babel",
      "react-require",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "unobtrusive",
      "unobtrusive/react"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "build": {
    "appId": "com.sergeybekrin.npmkit",
    "files": ["**/*", "dist", "!src"],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "publish": {
      "provider": "github"
    }
  },
  "jest": {
    "projects": [".jest.unit.json", ".jest.integration.json"]
  }
}
