{
  "private": true,
  "workspaces": [
    "app"
  ],
  "license": "MIT",
  "scripts": {
    "start": "electron ./app",
    "predev": "yarn build-main --mode=development",
    "dev": "webpack-dev-server --env.target=renderer --mode=development --hot --watch",
    "clean": "rimraf ./app/dist",
    "prebuild": "yarn clean",
    "build": "yarn build-main && yarn build-renderer",
    "build-main": "webpack --env.target=main --mode=production",
    "build-renderer": "webpack --env.target=renderer --mode=production",
    "prepack": "yarn build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac",
    "lint": "eslint .",
    "test": "yarn test-unit && yarn test-int",
    "create-diff-report": "node ./scripts/create-diff-report.js",
    "test-unit": "jest --projects .jest.unit.json",
    "test-int": "jest --projects .jest.integration.json --runInBand",
    "prerelease": "yarn lint && yarn build && yarn test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-require": "^3.1.1",
    "babel-plugin-root-import": "^6.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "concurrently": "^4.1.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-unobtrusive": "^1.2.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.1",
    "glob-gitignore": "^1.0.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.0.0",
    "invariant": "^2.2.4",
    "jest": "^24.0.0",
    "jest-image-snapshot": "^2.7.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.5",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "sendmail": "^1.4.1",
    "spectron": "^5.0.0",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-merge": "^4.2.1"
  },
  "browserslist": [
    "chrome 69"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "jest": {
    "projects": [
      ".jest.unit.json",
      ".jest.integration.json"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "unobtrusive",
      "unobtrusive/react"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "globals": {
      "__non_webpack_require__": true
    },
    "overrides": [
      {
        "files": [
          "**.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "bin/",
    "node_modules/",
    "dist/"
  ],
  "build": {
    "publish": false,
    "appId": "com.sbekrin.npmkit",
    "files": [
      "**/*",
      "dist",
      "!src"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "resolutions": {
    "fsevents": "^1.2.7",
    "upath": "^1.0.5"
  }
}
